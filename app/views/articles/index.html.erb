<div class="container">
  <h1 class="text-center">Koh'sブログ</h1>
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-3 content-with">
      <%= link_to article_path(article.id) do %>
        <div class="content">
          <%= image_tag "/flower.jpg", class: "img-fluid" %>
          <p class="title"><%= article.title %></p>
          <span><%= l article.created_at, format: :medium %></span>  
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= link_to "新規作成", new_article_path, class: "content-with btn btn-primary btn-md" %>
  </div>
</div>
